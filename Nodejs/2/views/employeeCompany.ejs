<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Employee Home</title>

    <link rel="stylesheet" href="icons/css/all.min.css">
    <link rel="stylesheet" href="icons/css/brands.min.css">
    <link rel="stylesheet" href="stylesheets/style.css">
    <link rel="stylesheet" href="stylesheets/modal.css">
    <link rel="stylesheet" href="stylesheets/navigation.css">
    <link rel="stylesheet" href="stylesheets/home.css">
</head>

<body>
    <!-- navigation -->
    <%- include('./partial/navigation.ejs') %>

    <!-- modal -->

    <!-- content -->
    <div class="content">
        <div class="main">
            <!-- main header -->
            <div class="main-header">
                <h1><%= title %> </h1>
                <!-- <div class="buttons">
                    <div id="two" class="button">new employee</div>
                </div> -->
            </div>

            <!-- cards -->
            <ul class="cards">
                <% for( let index = 0; index < employees.length; index++ ) { %>
                <li class="cards_item">
                    <div class="card">
                        <div class="card_content">
                            <ul class="information">
                                <li class="title"> <%= employees[index].firstname %> <%= employees[index].lastname %>
                                </li>
                                <li><span>companyID:</span> <%= employees[index].companyID._id %> </li>
                                <li><span>companyName:</span> <%= employees[index].companyID.companyName %> </li>
                                <li><span>gender:</span> <%= employees[index].gender %> </li>
                                <li><span>national number:</span> <%= employees[index].nationalNumber %> </li>
                                <li><span>date of birth:</span> <%= employees[index].persian %> </li>
                                <li><span>age:</span> <%= employees[index].age %> </li>
                                <li><span>manager:</span> <%= employees[index].managerStatus %> </li>

                                <a href="/employee/read/<%= employees[index].id %>" class="read-btn card_btn">more
                                    info</a>
                            </ul>
                        </div>
                    </div>
                </li>
                <% } %>
            </ul>
        </div>
    </div>


    <!-- scripts -->
    <script src="javascripts/jquery-3.5.1.min.js"></script>
    <script src="javascripts/navigation.js"></script>
    <script src="javascripts/createEmployee.js"></script>
</body>

</html>